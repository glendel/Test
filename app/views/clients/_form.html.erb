<%= form_for(@client, :html => { :multipart => true }) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :typeID, "Type ID" %><br />
    <%= f.select :typeID, Type.all.map{|c| [c.name, c.name]} %>
  </div>
  <div class="field">
    <%= f.label :numID, "ID" %><br />
    <%= f.text_field :numID %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :birth %><br />
    <%= f.date_select :birth, :start_year => 1940 %>
  </div>
  <div class="field">
    <%= f.label :sex %><br />
    <%= f.select :sex, {"Female" => "Female", "Male" => "Male"} %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.select :country, Country.all.map{|c| [c.name, c.code]} %>
  </div>
  <div class="field">
    <%= f.label :departament %><br />
    <%= f.text_field :departament %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
